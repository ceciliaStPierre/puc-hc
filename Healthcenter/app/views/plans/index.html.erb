<div class="board-wrapper">
<% for i in 0..@plans.length-1 do %>
  <% plan = @plans[i] %>
  <div class="board" id="board-<%=i%>">
    <div class="board-column" id="board-individual">
      <div class="board-title">
        <p>Clinico</p>
      </div>
      <% plan.activities.each do |activity| %>
        <% if activity.activity_type == "clinical" %>
          <div class="board-item">
            <div class="board-item-left">
              <%= image_tag(activity.user.avatar.url(:thumb)) %>
            </div>
            <div class="board-item-right">
              <%= link_to activity.description, activity %>
            </div>
          </div>
          <% end %>
      <% end %>
    </div>
    <div class="board-column" id="board-family">
      <div class="board-title">
        <p>Social</p>
      </div>
      <% plan.activities.each do |activity| %>
        <% if activity.activity_type == "social" %>
          <div class="board-item">
            <div class="board-item-left">
              <%= image_tag(activity.user.avatar.url(:thumb)) %>
            </div>
            <div class="board-item-right">
              <%= link_to activity.description, activity %>
            </div>
          </div>
          <% end %>
      <% end %>
    </div>
    <div class="board-column" id="board-social">
      <div class="board-title">
        <p>Familiar</p>
      </div>
      <% plan.activities.each do |activity| %>
        <% if activity.activity_type == "family" %>
          <div class="board-item">
            <div class="board-item-left">
              <%= image_tag(activity.user.avatar.url(:thumb)) %>
            </div>
            <div class="board-item-right">
              <%= link_to activity.description, activity %>
            </div>
          </div>
          <% end %>
      <% end %>
    </div>
    <div class="board-column" id="board-options">
        <p>Objetivo familiar: <%= plan.family_objective %></p>
        <p>Objetivo cl√≠nico: <%= plan.clinical_objective %></p>
        <p>Factor de Riesgo: <%= plan.risk_factor %></p>
        <p>Estado: <%= plan.state %></p>
        <p>Tipo: <%= plan.plan_type %></p>
        <select class="board-select">
          <% for j in 0..@plans.length-1 do %>

            <option value="<%=j%>"><%= @plans[j].family_group.family_name %></option>
          <% end %>
        </select>
        <p><%= link_to 'Nuevo Plan', new_plan_path %> | <%= link_to "Nueva Actividad",{:controller => :activities, :action => :new, :id => plan.id} %></p>
   </div>
  </div>
<% end %>
</div>